<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="5">
    <GridPane HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER_LEFT" minHeight="130" spacing="5" GridPane.columnIndex="0">
            <padding>
                <Insets top="8" right="12" bottom="8" left="12"/>
            </padding>

            <!-- Team Name and Index -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label"/>
                <Label fx:id="name" styleClass="cell_big_label" style="-fx-font-weight: bold;"/>
            </HBox>

            <!-- Vertical member cards -->
            <VBox fx:id="memberCards" spacing="5" alignment="CENTER_LEFT"/>
        </VBox>
    </GridPane>
</VBox>
